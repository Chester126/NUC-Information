.iconfont {
  font-family: 'iconfont' !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.stick-badge {
  background-color: #e74c3c;
  padding: 5px;
  border-radius: 7px;
}
.content {
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx 0;
}

.content-ending {
  width: 100%;
  color: #bbb;
  text-align: center;
  margin: 30rpx auto;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 3px;
  box-shadow: 1px 2px 3px #ddd;
  padding: 0 30rpx;
  color: #fff;
  background-color: #73b4ef;
}

.list-item-left {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-right: 10rpx;
}

.list-item-title {
  font-size: 13pt;
  line-height: 175%;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  overflow: hidden;
}

.list-item-time {
  font-size: 10pt;
  line-height: 125%;
  opacity: 0.6;
  width: 100%;
}

.list-item-icon {
  flex: 0 0 60rpx;
  height: 60rpx;
  width: 60rpx;
  border-left: 1px solid #fff;
  padding-left: 25rpx;
}
