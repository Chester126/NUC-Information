/* pages/Grade/Grade.wxss */
@import "../../utils/weui.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.userinfo-nickname {
  margin-top: 30rpx;
  color: #aaa;

}

.content{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}
.icon {
  height: 180rpx;
  width: 180rpx;
  border-radius: 50%;
  overflow: hidden;
}

.b {
  background: none !important;
  color: #000 !important;
  border-radius: 0;
}

.b::after {
  border: none;
  border-radius: 0;
}
