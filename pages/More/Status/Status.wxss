/* pages/More/Status/Status.wxss */

.status {
  margin: 20rpx;
  padding-bottom: 10rpx;
  color: rgb(73, 73, 73);
  border-bottom: 1rpx solid rgb(160, 157, 157);
}

.status-text {
  font-size: 85%;
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  padding-bottom: 10rpx;
  color: rgb(97, 96, 96);
  border-bottom: 1rpx solid rgb(160, 157, 157);
}

.status-left {
  margin-left: 20rpx;
  flex: 3;
}

.status-right {
  padding-right: 20rpx;
  flex: 1;
  text-align:center;
}

.status-normal {
  color: green;
}

.status-wait {
  color: lightgray;
}

.status-error {
  color: rgb(241, 94, 94);
}

.status-close {
  color: orange;
}
